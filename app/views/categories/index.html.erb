<h1 align="center">Listing all Categories</h1>

<div align="center">

<% @categories.each do |cate| %>
  <ul class="listing">
    <div class="row">
      <div class="well col-md-4 col-md-offset-4">
        <li class="article-title">
          <%= link_to "#{cate.name}", category_path(cate) %>
        </li>
      </div>
    </div>
  </ul>
<% end %>

</div>

