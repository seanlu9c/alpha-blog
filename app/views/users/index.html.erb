<h1 align="center">All Alpha Bloggers</h1>

<div align="center">
  
  <%= will_paginate %>
  
  <% @users.each do |u5| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li><%= link_to gravatar_for(u5), user_path(u5) %></li>
          <li class="article-title">
            <%= link_to u5.username, user_path(u5) %>
          </li>
          <li><small><%= pluralize(u5.articles.count, "article") if u5.articles %></small></li>
          
          <% if logged_in? and current_user.admin? %>
            <li><%= link_to "Delete this user", user_path(u5), method: :delete,
            data: { confirm: "Are you sure you want to delete this user and all its articles?" } %></li>
          <% end %>
          
        </div>
      </div>
    </ul>
  
  <% end %>
  <%= will_paginate %>
  
</div>
