<!--IMPORTANT !!-->
<!--this form_for == the RUBY form builder , will conflict with BOOTSTRAP <form class=.....-->
<!--dont put another <form class=... under RUBY form_for-->
<div class='row'>
  <div class='col-xs-12'>
    
    
    <!--add: class=form-horizontal -->
    <!--form_for @article do |f| -->
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    
    
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :title %>
        </div>
        <div class="col-sm-8">        
          <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %> 
        </div>
      </div>
      
      
      
      <!--with <p tag works-->
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :description %>
        </div>
        <div class="col-sm-8">        
          <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Body of article" %>
        </div>
      </div>


      <div class="form-group">
        <div class="row">
          <div class="col-sm-offset-2 col-sm-8">
            <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
              <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
            <% end %>
          </div>
        </div>
      </div>


      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    
    <% end %>
    
    <div class="col-xs-4 col-xs-offset-4">
      <!--link_to 'Back to articles listing',articles_path-->
      [ <%= link_to 'Cancel request and return to article listing',articles_path %> ]
    </div>

  </div>
</div>
